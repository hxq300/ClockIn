<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <com.lsy.wisdom.clockin.widget.IToolbar
            android:id="@+id/signed_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="?actionBarSize"
            android:paddingTop="@dimen/bar_top"
            app:navigationIcon="@mipmap/back_icon"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:title="客户签约"
            app:titleTextColor="@color/tab_nofocuse" />

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginTop="@dimen/ten"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin"
            android:text="项目名称"
            android:textColor="@color/four"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/signed_util_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入项目名称"
            android:inputType="text"
            android:paddingRight="@dimen/margin"
            android:textColor="@color/three"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_start"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginTop="@dimen/two"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/margin"
            android:text="开始时间"
            android:textColor="@color/four"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/black_into"
            android:drawablePadding="@dimen/twenty"
            android:paddingRight="@dimen/margin"
            android:text="请选择"
            android:textColor="@color/three"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/line_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginTop="@dimen/two"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/margin"
            android:text="竣工时间"
            android:textColor="@color/four"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/black_into"
            android:drawablePadding="@dimen/twenty"
            android:paddingRight="@dimen/margin"
            android:text="请选择"
            android:textColor="@color/three"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginTop="@dimen/two"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin"
            android:text="合同金额"
            android:textColor="@color/four"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/signed_amount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请输入金额"
            android:inputType="numberDecimal"
            android:paddingRight="@dimen/margin"
            android:textColor="@color/three"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/check_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginTop="@dimen/five"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/margin"
            android:text="项目负责人"
            android:textColor="@color/four"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/add_to"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/black_into"
            android:drawablePadding="@dimen/twenty"
            android:paddingRight="@dimen/margin"
            android:singleLine="true"
            android:text="请选择"
            android:textColor="@color/tex_b"
            android:textSize="13sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/join_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginTop="@dimen/five"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="@dimen/margin"
            android:text="参与人"
            android:textColor="@color/four"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/join_people"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:drawableRight="@mipmap/black_into"
            android:drawablePadding="@dimen/twenty"
            android:paddingRight="@dimen/margin"
            android:singleLine="true"
            android:text="请选择"
            android:textColor="@color/tex_b"
            android:textSize="13sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/line_height"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:layout_weight="1"
            android:background="@drawable/buttom_red"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_commit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten"
            android:layout_weight="1"
            android:background="@drawable/buttom_blue"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>


</LinearLayout>
