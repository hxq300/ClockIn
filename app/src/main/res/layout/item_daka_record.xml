<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/five"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_card"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="@dimen/ten"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/ten">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/twelve"
            android:paddingRight="@dimen/twelve">

            <TextView
                android:id="@+id/record_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="@dimen/five"
                android:layout_weight="1"
                android:text="今天（周二）18:35"
                android:textColor="@color/three"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/card_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="@dimen/five"
                android:layout_marginBottom="@dimen/five"
                android:text=""
                android:textColor="@color/btn_blue"
                android:textSize="13sp" />

        </LinearLayout>

        <TextView
            style="@style/fenge"
            android:layout_marginLeft="@dimen/ten"
            android:layout_marginRight="@dimen/ten" />

        <TextView
            android:id="@+id/record_location"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/line_height"
            android:layout_marginLeft="@dimen/twelve"
            android:drawableLeft="@mipmap/location_icon"
            android:drawablePadding="@dimen/five"
            android:gravity="center_vertical"
            android:text="上海市静安区108创意广场"
            android:textColor="@color/three"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/record_remark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twelve"
            android:layout_marginRight="@dimen/twelve"
            android:background="@color/line_dc"
            android:lineHeight="@dimen/twenty"
            android:padding="@dimen/five"
            android:text=""
            android:textColor="@color/three"
            android:textSize="13sp"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>