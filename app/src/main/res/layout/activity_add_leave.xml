<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <com.lsy.wisdom.clockin.widget.IToolbar
                android:id="@+id/add_leave_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:minHeight="?actionBarSize"
                android:paddingTop="@dimen/bar_top"
                app:navigationIcon="@mipmap/back_icon"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="请假"
                app:titleTextColor="@color/tab_nofocuse" />

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:id="@+id/line_start"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginTop="@dimen/ten"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/margin"
                android:text="开始时间"
                android:textColor="@color/four"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/black_into"
                android:drawablePadding="@dimen/twenty"
                android:paddingRight="@dimen/margin"
                android:text="请选择"
                android:textColor="@color/three"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/line_end"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginTop="@dimen/two"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/margin"
                android:text="结束时间"
                android:textColor="@color/four"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/black_into"
                android:drawablePadding="@dimen/twenty"
                android:paddingRight="@dimen/margin"
                android:text="请选择"
                android:textColor="@color/three"
                android:textSize="13sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/five"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:gravity="center_vertical"
                android:text="请假事由"
                android:textColor="@color/four"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/add_leave_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="left"
                android:hint="请输入"
                android:lineHeight="@dimen/twenty"
                android:minLines="6"
                android:textColor="@color/three"
                android:textSize="13sp" />

            <!--            <TextView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="@dimen/line_height"-->
            <!--                android:layout_gravity="right"-->
            <!--                android:gravity="center"-->
            <!--                android:text="0/200"-->
            <!--                android:textColor="@color/tex_b"-->
            <!--                android:textSize="13sp" />-->

        </LinearLayout>


        <LinearLayout
            android:id="@+id/check_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/line_height"
            android:layout_marginTop="@dimen/five"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="@dimen/margin"
                android:text="选择审批人"
                android:textColor="@color/four"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/add_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableRight="@mipmap/black_into"
                android:drawablePadding="@dimen/twenty"
                android:paddingRight="@dimen/margin"
                android:singleLine="true"
                android:text="请选择"
                android:textColor="@color/tex_b"
                android:textSize="13sp" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/add_leave_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginBottom="@dimen/thirty"
        android:background="@drawable/buttom_blue"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="15sp" />


</RelativeLayout>
